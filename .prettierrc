{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120
      }
    },
    {
     "files": ["*.ts"],
      "options": {
        "parser": "typescript",
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "semi": true,
        "useTabs": false
      }
    }
  ]
}
